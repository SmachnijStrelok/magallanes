{
    "name": "magephp/magallanes",
    "description": "A Deployment Tool for PHP applications (Enhanced versions)",
    "homepage": "https://magephp.github.io",
    "license": "MIT",
    "type": "library",
    "keywords": ["deployment"],
    "authors": [
        {
            "name": "James Moriarty",
            "email": "moriarty@codefelony.com"
        }
    ],
    "require": {
        "php": ">=5.3",
        "elfet/pure": "~1.1",
        "symfony/finder": "~2.6",
        "symfony/console": "~2.6",
        "symfony/yaml": "~2.6",
        "symfony/process": "~2.6",
        "kherge/amend": "~3.0",
        "phpmailer/phpmailer": "~5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.3",
        "satooshi/php-coveralls": "~0.6",
        "php-mock/php-mock": "0.5",
        "erusev/parsedown": "~1.5"
    },
    "suggest": {
        "herzult/php-ssh": "For SSH support through native SSH2 extension",
        "ext-sockets": "For parallel deployment"
    },
    "autoload": {
        "psr-4": {
            "Mage\\": "./Mage",
            "Task\\": [".mage/tasks", "../../../.mage/tasks"],
            "Command\\": [".mage/tasks", "../../../.mage/commands"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MageTest\\": "./tests/MageTest"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "bin": [
        "bin/mage"
    ]
}
